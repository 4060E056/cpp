                C
-------------------------------------------
-------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main()
{
	int a;
	printf("請輸入華氏溫度\n");
	scanf("%d",&a);
	printf("%.2f",(a-32)*5/9);



system("pause");
return 0;
}
-------------------------------------------
-------------------------------------------
                C++
-------------------------------------------
-------------------------------------------
#include <iostream>
using namespace std;
int main()
{
	int a;
  cout << "請輸入華氏溫度" << endl;
	cin >>a;
  cout << (a-32)*5/9 << endl;



system("pause");
return 0;
}
